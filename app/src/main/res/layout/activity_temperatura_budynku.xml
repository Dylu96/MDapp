<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TemperaturaBudynku">

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Docelowa temperatura wewnątrz budynku:"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView12" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/logo_pp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="8dp"
        android:text="© Copyright by Michał Dylewski 2021"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioGroup
        android:id="@+id/ilestopni"
        android:layout_width="133dp"
        android:layout_height="280dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView25">

        <RadioButton
            android:id="@+id/stopni17"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="17°C" />

        <RadioButton
            android:id="@+id/stopni18"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="18°C" />

        <RadioButton
            android:id="@+id/stopni19"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="19°C" />

        <RadioButton
            android:id="@+id/stopni20"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="20°C" />

        <RadioButton
            android:id="@+id/stopni21"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="21°C" />

        <RadioButton
            android:id="@+id/stopni22"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="22°C" />

        <RadioButton
            android:id="@+id/stopni23"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="23°C" />

        <RadioButton
            android:id="@+id/stopni24"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="24°C" />
    </RadioGroup>

    <TextView
        android:id="@+id/stopnieView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ilestopni" />

    <Button
        android:id="@+id/dalejLiczbaMieszkancow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Dalej"
        android:onClick="openLiczbaMieszkancow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stopnieView" />

</androidx.constraintlayout.widget.ConstraintLayout>